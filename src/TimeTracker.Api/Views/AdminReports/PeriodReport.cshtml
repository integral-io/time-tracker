@model TimeTracker.Library.Models.Admin.PayPeriodReportViewModel

@{
    ViewBag.Title = "Report by Pay Period or Range";
    Layout = "_Layout";
}

<h2>Report by Pay Period or Range</h2>
<form asp-action="PeriodReport" asp-controller="AdminReports" method="get"> 
    <label>Pay Period Start Date:</label>
    <input name="start" type="text" maxlength="10" placeholder="YYYY-MM-DD" value="@Model.PayPeriodStartDate.ToString("yyyy-MM-dd")"/>
    <input type="submit"/>
    <strong>End Date:</strong>
    <span>@Model.PayPeriodEndDate.ToString("D")</span>
</form>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
    <tr>
        <th>Username</th>
        <th>First</th>
        <th>Last</th>
        <th>Total Billable Hours</th>
        <th>Total Sick Hours</th>
        <th>Total Vacation Hours</th>
        <th>Total Non-billable Hours</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model.ReportItems)
    {
        <tr>
            <td>@user.SlackUserName</td>
            <td>@user.First</td>
            <td>@user.Last</td>
            <td>@user.BillableHoursYtd</td>
            <td>@user.SickHoursYtd</td>
            <td>@user.VacationHoursYtd</td>
            <td>@user.OtherNonBillableYtd</td>
        </tr>
    }
    </tbody>
</table>
